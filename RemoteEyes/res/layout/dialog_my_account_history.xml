<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_m"
            android:layout_marginLeft="@dimen/padding_xxl"
            android:layout_marginRight="@dimen/padding_xxl"
            android:layout_marginTop="@dimen/padding_xxl"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_l"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_dialog_location_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Change Primary and PayPal emails"
                    android:textSize="@dimen/text_size_title_time_dialog"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/by_submiting_this_challenge"
                    android:textSize="@dimen/text_title_m"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_centerVertical="true"
                android:background="@drawable/gray_left_arrow" />

            <TextView
                android:id="@+id/tv_my_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_xxl"
                android:layout_marginRight="@dimen/padding_xxl"
                android:paddingLeft="@dimen/padding_l"
                android:text="March, 2014"
                android:textSize="@dimen/text_title_xl"
                android:textStyle="bold|italic" />

            <ImageButton
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_centerVertical="true"
                android:background="@drawable/gray_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_xxl"
            android:layout_marginRight="@dimen/padding_xxl"
            android:gravity="center"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/lv_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_h" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_privacy_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>