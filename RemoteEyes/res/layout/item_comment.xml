            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_message_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="afasfs fsf sdfd fsf dfsf df sfsdf  sdfsdfsfs fsf sf sdf sf sdfsf sdf sdf sdf saf s fsf sa"
            android:background="@drawable/comment_pink"
            android:gravity="left|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:orientation="horizontal"
        android:padding="@dimen/padding_s" >

        <TextView
            android:id="@+id/tv_message_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_green"
            android:text="afasfs fsf sdfd fsf dfsf df sfsdf  sdfsdfsfs fsf sf sdf sf sdfsf sdf sdf sdf saf s fsf sa"
