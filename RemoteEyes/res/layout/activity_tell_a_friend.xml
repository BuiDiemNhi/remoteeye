<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12" >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_h"
            android:layout_weight="4.5"
            android:background="@drawable/no_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_title_xl" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/tell_a_friend"
                android:textColor="@color/blue_title_my_area"
                android:textSize="@dimen/text_title_xxxl"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_friend_already"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends "
                    android:textColor="@color/text_blue_link"
                    android:textSize="@dimen/text_title_m" />

                <TextView
                    android:id="@+id/tv_friend_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_know_tell_others_to_join"
                    android:textSize="@dimen/text_title_l" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_button"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_s" >

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/phone" />

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/facebook" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/twitter" />

            <ImageView
                android:id="@+id/iv_googleplus"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/googleplus" />

            <ImageView
                android:id="@+id/iv_linkedin"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/linkedin" />

            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/instagram" />

            <ImageView
                android:id="@+id/iv_youtube"
                android:layout_width="@dimen/icon_profile_l"
                android:layout_height="@dimen/icon_profile_l"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/google" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_phone_friend_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/my_account_text_phone_contacts"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ll_facebook_friend_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/my_account_text_facebook_contacts"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_facebook_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/my_account_text_twitter_contacts"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_twitter_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/google_plus"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_google_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_google_plus_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/linked_in"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_linked_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_linked_in_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/instagram"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_instagram_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_button"
                    android:padding="5dp"
                    android:text="@string/youtube"
                    android:textSize="@dimen/text_title_xl"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="7"
                    android:background="@color/green_button"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_expand_youtube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_up" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_youtube_friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>