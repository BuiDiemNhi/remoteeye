<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_author_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_s"
                android:background="@drawable/no_avatar" />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_l"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_status_avatar"
                 android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/status_avatar_private"
         	 android:layout_marginBottom="@dimen/padding_s"
         	 android:textColor="@color/gray_text"
            android:textStyle="italic"
            android:textAlignment="center" 
            android:visibility="gone"
            />

            <LinearLayout
                android:id="@+id/ll_image_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/padding_s"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_image_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_blue_img" />

                <TextView
                    android:id="@+id/tv_num_image_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/iv_dot_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:background="@drawable/dot" />

                <ImageView
                    android:id="@+id/iv_accepted_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:src="@drawable/ic_small_blue_check" />

                <TextView
                    android:id="@+id/TvCountAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_s"
            android:layout_marginRight="@dimen/padding_s"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TvTitle_Challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text_title_list"
                    android:textStyle="italic|bold" />

                <ImageView
                    android:id="@+id/iv_share_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_share" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_s"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_blue_location" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:textStyle="italic|bold" />

                <ImageView
                    android:id="@+id/iv_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:src="@drawable/dot" />

                <TextView
                    android:id="@+id/TvDetail_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_s"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:src="@drawable/ic_blue_calendar" />

                <TextView
                    android:id="@+id/TvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/iv_bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:src="@drawable/dot" />

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:src="@drawable/ic_blue_flag" />

                <TextView
                    android:id="@+id/TvDuration_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/iv_dot_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:background="@drawable/dot" />

                <ImageView
                    android:id="@+id/iv_cup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:src="@drawable/ic_pink_cup" />

                <TextView
                    android:id="@+id/TvReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:textColor="@color/pink"
                    android:textStyle="italic" />
               
                

                <ImageView
                    android:id="@+id/iv_dot_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:background="@drawable/dot" />

                <ImageView
                    android:id="@+id/iv_clock_expired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:background="@drawable/ic_black_clock" />

                <TextView
                    android:id="@+id/tv_duration_expired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_ss"
                    android:textStyle="italic" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/btn_edit_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/pen"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_s" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal" >
                      <Button
                    android:id="@+id/btn_repaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:focusable="false"
                        android:visibility="gone"
                     android:background="@drawable/btn_fund" />

                    <Button
                        android:id="@+id/btn_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_accept"
                        android:focusable="false"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_camera"
                        android:focusable="false"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_m"
                        android:background="@drawable/btn_upload"
                        android:focusable="false"
                        android:visibility="gone" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_ignore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_ignore"
                    android:focusable="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_withdraw"
                    android:focusable="false"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_body"
        android:paddingRight="@dimen/padding_body"
        android:paddingTop="@dimen/padding_body" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_line"
            android:background="@drawable/lineline" />

        <RelativeLayout
            android:id="@+id/rl_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scrollbars="vertical"
                android:textSize="@dimen/text_title_m"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ivQuoteOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quote_open" />

            <ImageView
                android:id="@+id/ivQuoteClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quote_close" />

            <Button
                android:id="@+id/btn_edit_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pen"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/v_explanatory_photos"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_line"
            android:background="@drawable/lineline" />

        <LinearLayout
            android:id="@+id/ll_explanatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_body" >

            <RelativeLayout
                android:id="@+id/rl_explanatory_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10" >

                <TextView
                    android:id="@+id/TvExplanatory_Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text=" Explanatory Photos:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_m"
                    android:textStyle="bold|italic" />

                <ImageButton
                    android:id="@+id/btnArrow_Explanatory_Photos"
                    android:layout_width="@dimen/icon_profile_m"
                    android:layout_height="@dimen/icon_profile_m"
                    android:layout_alignParentRight="true"
                    android:layout_weight="9"
                    android:background="@drawable/arrow_up" />
                 <Button
                    android:id="@+id/btn_gray_add__detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gray_add"
                    android:layout_toLeftOf="@+id/btnArrow_Explanatory_Photos" 
                    android:visibility="gone"/>
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/hs_explanatory_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_explanatory_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_line"
            android:background="@drawable/lineline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_body" >

            <RelativeLayout
                android:id="@+id/rl_response_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TvResponse_Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" No Response Photos Yet."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_m"
                    android:textStyle="bold|italic" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/hs_response_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_response_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_line"
            android:background="@drawable/lineline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_body" >

            <RelativeLayout
                android:id="@+id/rl_response_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TvResponse_Video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" No Response Videos Yet."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_m"
                    android:textStyle="bold|italic" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/hs_response_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_response_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_line"
            android:background="@drawable/lineline" />

        <LinearLayout
            android:id="@+id/ll_terms_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_by_submit" >

            <CheckBox
                android:id="@+id/cb_terms_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_check_box"
                android:button="@null"
                android:checked="true"
                android:enabled="false"
                android:gravity="top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_terms_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:textSize="@dimen/text_title_s"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_report" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>