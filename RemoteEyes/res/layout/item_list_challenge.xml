<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_left_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_author_avatar_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_s"
            android:background="@drawable/no_avatar" />
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_l"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_status_avatar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/status_avatar_private"
         	 android:layout_marginBottom="@dimen/padding_s"
         	 android:textColor="@color/gray_text"
            android:textStyle="italic"
            android:textAlignment="center" 
            />

        <LinearLayout
            android:id="@+id/ll_image_avatar_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
              android:layout_marginBottom="@dimen/padding_s"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_image_avatar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_blue_img" />

            <TextView
                android:id="@+id/tv_num_image_avatar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_dot_avatar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:background="@drawable/dot" />

            <ImageView
                android:id="@+id/iv_accepted_avatar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:src="@drawable/ic_small_blue_check" />

            <TextView
                android:id="@+id/tv_num_accepted_avatar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_s"
        android:layout_marginRight="@dimen/padding_s"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_title_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_title_list"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/iv_share_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_share" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_s"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_distance_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_blue_location" />

            <TextView
                android:id="@+id/tv_distance_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/iv_dot_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/tv_address_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_s"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_info_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_s"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_calendar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:src="@drawable/ic_blue_calendar" />

            <TextView
                android:id="@+id/tv_start_day_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_bell_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:src="@drawable/dot" />

            <ImageView
                android:id="@+id/iv_flag_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:src="@drawable/ic_blue_flag" />

            <TextView
                android:id="@+id/tv_duration_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_dot_list_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:background="@drawable/dot" />

            <ImageView
                android:id="@+id/iv_cup_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:src="@drawable/ic_pink_cup" />

            <TextView
                android:id="@+id/tv_budget_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:textColor="@color/pink"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_dot_list_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:background="@drawable/dot" />

            <ImageView
                android:id="@+id/iv_clock_expired_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:background="@drawable/ic_black_clock" />

            <TextView
                android:id="@+id/tv_duration_expired_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_s"
                android:textStyle="italic" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/padding_s" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >
                   <Button
                    android:id="@+id/btn_repaid_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_fund"
                    android:focusable="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_accept_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_accept"
                    android:focusable="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_camera_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_camera"
                    android:focusable="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_upload_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_m"
                    android:background="@drawable/btn_upload"
                    android:focusable="false"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_ignore_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_ignore"
                android:focusable="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_withdraw_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_withdraw"
                android:focusable="false"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>